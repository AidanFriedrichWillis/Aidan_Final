<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipelayout"
    tools:context=".WorkoutPage">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/finishworkoutBTN1"
                android:layout_width="317dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="68dp"
                android:layout_marginBottom="60dp"
                android:text="Finish Workout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addExersise1" />

            <Button
                android:id="@+id/addExersise1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/workoutnameET"
                android:layout_marginStart="140dp"
                android:layout_marginTop="184dp"
                android:layout_marginBottom="23dp"
                android:onClick="addExerise"
                android:text="Add Exerise"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exersizesTV1" />

            <TextView
                android:id="@+id/usernameTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="182dp"
                android:text="nameshouldbehere"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/exersizesTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/workoutnameET"
                android:layout_marginStart="100dp"
                android:layout_marginTop="76dp"
                android:layout_marginBottom="286dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usernameTV1" />

            <EditText
                android:id="@+id/workoutnameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/finishworkoutBTN1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="98dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="114dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="WorkoutName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addExersise1" />


        </RelativeLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>